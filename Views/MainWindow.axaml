<Window xmlns="https://github.com/avaloniaui"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CanvasReminders.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CanvasReminders.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="CanvasReminders">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <SplitView
        Background="white"
        IsPaneOpen="{Binding IsPaneOpen}"
        OpenPaneLength="300"
        CompactPaneLength="50"
        DisplayMode="CompactInline">
        <SplitView.Pane>
            <StackPanel>
                <!-- <Button Command="{Binding ButtonClick}">=</Button> -->
                <ListBox ItemsSource="{Binding Courses}"
                         SelectedItem="{Binding SelectedItem}">
                    <ListBox.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:CourseViewModel}">
                            <StackPanel>
                                <TextBlock Text="{Binding CourseName}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </SplitView.Pane>
        <StackPanel>
            <TransitioningContentControl Content="{Binding CurrentPage}"></TransitioningContentControl>
        </StackPanel>
    </SplitView>

</Window>
